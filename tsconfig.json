{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./",
    "rootDir": "./",
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "pretty": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "dom", "es2017"]
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
